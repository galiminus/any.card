<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="form-group">
      <%= f.label :login %>
      <%= f.text_field :login, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>

    <%= f.submit "SIGN-IN", class: 'btn btn-primary btn-lg btn-block pull-right' %>
  </div>
  <div class="col-md-3">
    <%= devise_error_messages! %>
  </div>
<% end %>
